function StageConfig.GetStage(id: number): StageDefinition?
	if id >= 1 and id <= #stages then
		return stages[id]
	end
	return nil
end

function StageConfig.GetStagesForZone(zone: number): { StageDefinition }
	local result = {}
	for _, stage in stages do
		if stage.Zone == zone then
			table.insert(result, stage)
		end
	end
	return result
end

function StageConfig.GetZoneName(zone: number): string
	local Constants = require(script.Parent.Constants)
	return Constants.ZONE_NAMES[zone] or "Unknown"
end

function StageConfig.GetTotalStages(): number
	return #stages
end

return StageConfig
